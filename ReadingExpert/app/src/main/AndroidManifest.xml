<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.svc2uk.readingexpert" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.svc2uk.readingexpert.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.svc2uk.readingexpert.PreReadActivity"
            android:label="@string/title_activity_pre_read"
            android:parentActivityName="com.svc2uk.readingexpert.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lt.vadovauk.readingexpert.app.MainActivity" />
        </activity>
        <activity
            android:name="com.svc2uk.readingexpert.ReadActivity"
            android:label="@string/title_activity_read"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.svc2uk.readingexpert.QuizActivity"
            android:label="@string/title_activity_quiz"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.svc2uk.readingexpert.ResultActivity"
            android:label="@string/title_activity_result" >
        </activity>
    </application>

</manifest>
